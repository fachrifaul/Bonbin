<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/list_button_selector" >

    <ImageView
        android:id="@+id/icon_list"
        android:layout_width="72.0dip"
        android:layout_height="72.0dip"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_margin="5dp"
        android:adjustViewBounds="true"
        android:contentDescription="@string/app_name"
        android:padding="8dp"
        android:scaleType="centerCrop"
        android:src="@drawable/load" />

    <LinearLayout
        android:id="@+id/deskripsi_list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/icon_list"
        android:orientation="vertical"
        android:padding="8dp" >

        <TextView
            android:id="@+id/text_bonbin"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Fakultas Ilmu Sosial dan Politik"
            android:textColor="#000"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/txt_jarak"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Jarak"
            android:textColor="#000"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/text_lat"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Lat"
            android:textColor="#000"
            android:textSize="12sp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/text_long"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Long"
            android:textColor="#000"
            android:textSize="12sp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/txt_description"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Desc"
            android:textColor="#000"
            android:textSize="12sp"
            android:visibility="gone" />
    </LinearLayout>

</RelativeLayout>